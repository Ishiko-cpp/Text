ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/Text/Include/Ishiko/IshikoText.bkl;
import $(ishikopath)/TestFramework/Include/Ishiko/TestFramework/TestFrameworkCore.bkl;

toolsets = gnu vs2017 vs2015 vs2013;

gnu.makefile = ../GNUmakefile/GNUmakefile;
vs2017.solutionfile = ../VC15/IshikoTextTests.sln;
vs2015.solutionfile = ../VC14/IshikoTextTests.sln;
vs2013.solutionfile = ../VC12/IshikoTextTests.sln;

program IshikoTextTests : IshikoText, IshikoTestFrameworkCore
{
    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoText IshikoTestFrameworkCore IshikoProcess IshikoErrors boost_filesystem;
    }

    if ($(toolset) != gnu)
    {
        archs = x86 x86_64;
    }

    headers
    {
        ../../Source/CStringTests.h
    }

    sources
    {
        ../../Source/CStringTests.cpp
        ../../Source/main.cpp
    }
}
